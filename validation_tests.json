      "input": "validation/inputs/nlevel_3_ov_decane.mqc",
      "expected_energy": -33.0506139740,
      "type" : "fragmented"
      },
    {
      "name": "Unfragmented glycine tripeptide",
      "input": "validation/inputs/no_frag.mqc",
      "expected_energy": -143.291489223019653,
      "type": "unfragmented"
    },
    {
      "name": "Charged cluster MBE",
      "input": "validation/inputs/charged_cluster.mqc",
      "expected_energy": -45.7161383790,
      "type": "fragmented"
    },
    {
      "name": "Glycine 10-mer MBE",
